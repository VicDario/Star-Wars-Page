{
	"env": {
		"browser": true,
		"amd": true,
		"node": true,
		"es6": true
	},
    "plugins": ["prettier", "react", "react-hooks", "jsx-a11y"],
    "extends": [
        "eslint:recommended",
		"plugin:prettier/recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "prettier/prettier": "error"
    }
}
